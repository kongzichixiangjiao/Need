#      pod 'SwiftLint' # 代码规范
      pod 'VegaScrollFlowLayout'
      pod 'SwipeCellKit'
      
      pod 'SwiftMonkeyPaws'
      
      target 'NeedTests' do
        
      end
      target 'NeedUITests' do
        pod 'SwiftMonkey'
      end
end

