      pod 'Moya/RxSwift'
      pod 'Result'
      pod 'Kingfisher'
      pod 'ObjectMapper'
      pod 'SwiftyJSON'
      
      # Rx
      pod 'RxSwift'
      pod 'RxCocoa'
      pod 'RxDataSources'
      pod 'NSObject+Rx'
      pod 'RxGesture'

      # UI
      pod 'SnapKit'
      pod 'TYCyclePagerView'
      pod 'TYPagerController'
      pod 'MJRefresh'

      # Logging
      
      # Misc.
      pod 'IQKeyboardManagerSwift'
      pod 'Then'
      pod 'ReusableKit'
      pod 'SwiftyColor'
  #    pod 'MLeaksFinder' # 检测内存泄漏
      pod 'URLNavigator' #路由
      pod 'TTRangeSlider'
      pod 'SwiftDate'
      pod 'SwiftyRSA'
      pod 'FreeStreamer' # 音频
      pod 'SCLAlertView' # 5k弹框
